            "content": "<template>\r\n  <div>\r\n    <el-breadcrumb separator-class=\"el-icon-arrow-right\">\r\n      <el-breadcrumb-item :to=\"{ path: '/home' }\">首页</el-breadcrumb-item>\r\n      <el-breadcrumb-item>商品管理</el-breadcrumb-item>\r\n      <el-breadcrumb-item>分类参数</el-breadcrumb-item>\r\n    </el-breadcrumb>\r\n\r\n    <el-card>\r\n      <el-alert\r\n        title=\"注意: 只允许为三级分类设置相关参数!\"\r\n        type=\"warning\"\r\n        show-icon\r\n        :closable=\"false\"\r\n      >\r\n      </el-alert>\r\n      <el-row class=\"cat_opt\">\r\n        <el-col>\r\n          <span>选择商品分类: </span>\r\n          <el-cascader\r\n            size=\"small\"\r\n            v-model=\"selectedKeys\"\r\n            :options=\"cateList\"\r\n            :props=\"cateProps\"\r\n            clearable\r\n            @change=\"handleChange\"\r\n          ></el-cascader>\r\n        </el-col>\r\n      </el-row>\r\n      <el-tabs v-model=\"activeName\" @tab-click=\"handleClick\">\r\n        <el-tab-pane label=\"动态参数\" name=\"many\">\r\n          <el-button\r\n            size=\"mini\"\r\n            type=\"primary\"\r\n            :disabled=\"isBtnDisabled\"\r\n            style=\"margin-bottom: 15px\"\r\n            @click=\"addDialogVisible = true\"\r\n            >添加参数\r\n          </el-button>\r\n          <el-table :data=\"manyData\" border style=\"width: 100%\">\r\n            <el-table-column type=\"expand\"\r\n              ><template v-slot=\"{ row }\">\r\n                <el-tag\r\n                  :key=\"index\"\r\n                  v-for=\"(tag, index) in row.attr_vals\"\r\n                  closable\r\n                  :disable-transitions=\"false\"\r\n                  @close=\"handleClose(row, index)\"\r\n                >\r\n                  {{ tag }}\r\n                </el-tag>\r\n                <el-input\r\n                  class=\"input-new-tag\"\r\n                  v-if=\"row.inputVisible\"\r\n                  v-model=\"row.inputValue\"\r\n                  ref=\"saveTagInput\"\r\n                  size=\"small\"\r\n                  @keyup.enter.native=\"handleInputConfirm(row)\"\r\n                  @blur=\"handleInputConfirm(row)\"\r\n                >\r\n                </el-input>\r\n                <el-button\r\n                  v-else\r\n                  class=\"button-new-tag\"\r\n                  size=\"small\"\r\n                  @click=\"showInput(row)\"\r\n                  >+ New Tag</el-button\r\n                >\r\n              </template></el-table-column\r\n            >\r\n            <el-table-column type=\"index\" label=\"#\" width=\"100\" align=\"center\">\r\n            </el-table-column>\r\n            <el-table-column prop=\"attr_name\" label=\"参数名称\">\r\n            </el-table-column>\r\n            <el-table-column label=\"操作\">\r\n              <template v-slot=\"{ row }\">\r\n                <el-button\r\n                  icon=\"el-icon-edit\"\r\n                  size=\"mini\"\r\n                  type=\"primary\"\r\n                  @click=\"editAttribute(row.attr_id)\"\r\n                  >编辑\r\n                </el-button>\r\n                <el-button\r\n                  icon=\"el-icon-delete\"\r\n                  size=\"mini\"\r\n                  type=\"danger\"\r\n                  @click=\"delAttribute(row)\"\r\n                  >删除\r\n                </el-button>\r\n              </template></el-table-column\r\n            >\r\n          </el-table>\r\n        </el-tab-pane>\r\n        <el-tab-pane label=\"静态属性\" name=\"only\">\r\n          <el-button\r\n            size=\"mini\"\r\n            type=\"primary\"\r\n            :disabled=\"isBtnDisabled\"\r\n            style=\"margin-bottom: 15px\"\r\n            @click=\"addDialogVisible = true\"\r\n            >添加属性\r\n          </el-button>\r\n          <el-table\r\n            :data=\"onlyData\"\r\n            border\r\n            style=\"width: 100%\"\r\n          >\r\n            <el-table-column type=\"expand\"\r\n              ><template v-slot=\"{ row }\"><el-tag\r\n                  :key=\"index\"\r\n                  v-for=\"(tag, index) in row.attr_vals\"\r\n                  closable\r\n                  :disable-transitions=\"false\"\r\n                  @close=\"handleClose(row, index)\"\r\n                >\r\n                  {{ tag }}\r\n                </el-tag>111\r\n                <el-input\r\n                  class=\"input-new-tag\"\r\n                  v-if=\"row.inputVisible\"\r\n                  v-model=\"row.inputValue\"\r\n                  ref=\"saveTagInput\"\r\n                  size=\"small\"\r\n                  @keyup.enter.native=\"handleInputConfirm(row)\"\r\n                  @blur=\"handleInputConfirm(row)\"\r\n                >\r\n                </el-input>\r\n                <el-button\r\n                  v-else\r\n                  class=\"button-new-tag\"\r\n                  size=\"small\"\r\n                  @click=\"showInput(row)\"\r\n                  >+ New Tag</el-button\r\n                ></template></el-table-column\r\n            >\r\n            <el-table-column type=\"index\" label=\"#\" width=\"100\" align=\"center\">\r\n            </el-table-column>\r\n            <el-table-column prop=\"attr_name\" label=\"参数名称\">\r\n            </el-table-column>\r\n            <el-table-column label=\"操作\">\r\n              <template v-slot=\"{ row }\">\r\n                <el-button\r\n                  icon=\"el-icon-edit\"\r\n                  size=\"mini\"\r\n                  type=\"primary\"\r\n                  @click=\"editAttribute(row.attr_id)\"\r\n                  >编辑\r\n                </el-button>\r\n                <el-button\r\n                  icon=\"el-icon-delete\"\r\n                  size=\"mini\"\r\n                  type=\"danger\"\r\n                  @click=\"delAttribute(row)\"\r\n                  >删除\r\n                </el-button>\r\n              </template></el-table-column\r\n            >\r\n    